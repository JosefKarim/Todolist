@model IEnumerable<ToDoListMVC.Models.TodoList>

@{
    ViewData["Title"] = "To do list";
}



<p>
    <a asp-action="Create"><button type="button" class="btn btn-outline-success btn-sm">Add new item</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                To do
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Content
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.id">Edit </a>*@
               
                <a asp-action="Edit" asp-route-id="@item.id"> <button type="button" class="btn btn-outline-primary btn-sm">Edit</button> </a>
                
                
                @*<a asp-action="Details" asp-route-id="@item.id">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.id"><button type="button" class="btn btn-outline-danger btn-sm">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
